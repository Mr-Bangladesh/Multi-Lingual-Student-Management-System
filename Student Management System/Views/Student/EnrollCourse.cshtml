@model List<EnrollCourseViewModel>

<form method="post">
	<div class="card">
		<div class="card-header">
			<h2>Manage Courses</h2>
		</div>
		<div class="card-body">
			@{
				for(int i = 0; i < Model.Count; i++)
				{
					<div class="form-custom-checkbox m-1">
						<input type="hidden" asp-for="@Model[i].CourseId">
						<input type="hidden" asp-for="@Model[i].CourseTitle">
						<input type="hidden" asp-for="@Model[i].CourseTeacher">
						<input type="hidden" asp-for="@Model[i].CourseCode">
						<input asp-for="@Model[i].IsSelected" class="form-check-input">
						<label asp-for="@Model[i].IsSelected" class="form-check-label">@Model[i].CourseCode - @Model[i].CourseTitle - @Model[i].CourseTeacher</label>
					</div>
				}
			}
		</div>
		<div class="card-footer">
			<input type="submit" value="Update" class="btn btn-primary" />
		</div>
	</div>
</form>