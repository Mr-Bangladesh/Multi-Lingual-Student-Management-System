@model IEnumerable<Student_Management_System.ViewModels.CourseViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @{
                    var titleData = _localResourceService.GetLocalResourceByName("Title");
                    if(titleData == null)
                    {
                        @Html.DisplayNameFor(model => model.Title)
                    }
                    else
                    {
                        @titleData
                    }
                }
                
            </th>
            <th>
                @{
                    var codeData = _localResourceService.GetLocalResourceByName("Code");
                    if(codeData == null)
                    {
                        @Html.DisplayNameFor(model => model.Code)
                    }
                    else
                    {
                        @codeData
                    }
                }
            </th>
            <th>
                @{
                    var courseTeacherData = _localResourceService.GetLocalResourceByName("CourseTeacher");
                    if(courseTeacherData == null)
                    {
                        @Html.DisplayNameFor(model => model.CourseTeacher)
                    }
                    else
                    {
                        @courseTeacherData
                    }
                }
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseTeacher)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
