@model Student_Management_System.ViewModels.LanguageViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>LanguageModel</h4>
    <hr />
    <div class="row">
        <div class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </div>
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </div>
        <br />
        <h3>Localized Properties</h3>
        @{
            int i = 1;
            foreach(var data in Model.LocalizedProperty)
            {
                <div class="col-sm-12">
                <h5>@(i++) - Index</h5> <br />
                <p>Entity Name - @data.EntityName</p>
                <p>Entity Property Name - @data.EntityPropertyName</p>
                <p>Local Value - @data.LocalValue</p>
                <p>Language - @data.Language</p>
                </div>
            }
        }
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
