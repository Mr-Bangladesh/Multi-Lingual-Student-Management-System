@model IEnumerable<Student_Management_System.ViewModels.TeacherViewModel>

@{
    ViewData["Title"] = "Index";
    //int currentLanguageId = _currentDefaultService.GetCurrentLanguageId();
    //await _localResourceService.LoadLocalResourceAsync(currentLanguageId);
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @{
                    var nameData = _localResourceService.GetLocalResourceByName("Name");
                    if(nameData == null)
                    {
                        @Html.DisplayNameFor(model => model.Name)
                    }
                    else
                    {
                        @nameData
                    }
                }
            </th>
            <th>
                @{
                    var designationData = _localResourceService.GetLocalResourceByName("Designation");
                    if(designationData == null)
                    {
                        @Html.DisplayNameFor(model => model.Designation)
                    }
                    else
                    {
                        @designationData
                    }
                }
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Designation)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
